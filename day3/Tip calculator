<body>
    <div class="container">
        <h1>Tip Calculator</h1>
        <p>Enter your bill amount and tip percentage:</p>
        <input type="number" id="billAmount" placeholder="Enter bill amount in INR" min="0">
        <br>
        <input type="number" id="tipPercentage" placeholder="Enter tip percentage" min="0">
        <br>
        <button onclick="calculateTip()">Calculate</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateTip() {
            // Get the inputs
            const billAmount = parseFloat(document.getElementById('billAmount').value);
            const tipPercentage = parseFloat(document.getElementById('tipPercentage').value);

            // Validate inputs
            if (isNaN(billAmount) || billAmount <= 0 || isNaN(tipPercentage) || tipPercentage < 0) {
                document.getElementById('result').innerText = "Invalid input. Please enter valid numbers for bill amount and tip percentage.";
                return;
            }

            // Calculate tip and total amount
            const tip = billAmount * (tipPercentage / 100);
            const totalAmount = billAmount + tip;

            // Display the result
            document.getElementById('result').innerText = `For a bill of ₹${billAmount.toFixed(2)} with a ${tipPercentage}% tip, the tip is ₹${tip.toFixed(2)}, and the total bill is ₹${totalAmount.toFixed(2)}.`;
        }
    </script>
</body>
